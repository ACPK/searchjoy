<% @searches.each do |search| %>
  <li class="cf">
    <div style="float: right; text-align: right;">
      <%= time_ago_in_words search.created_at %> ago
      <div><%= pluralize search.results_count, "result" %></div>
    </div>
    <%= search.search_type %>
    <div><%= search.query %></div>
    <% if search.converted_at %>
      <%= (search.converted_at - search.created_at).round %> sec
      <%= search.convertable.try(:name) %>
    <% end %>
  </li>
<% end %>
