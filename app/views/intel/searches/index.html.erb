<h1>Top <%= @limit %> Searches</h1>

<table>
  <thead>
    <tr>
      <th>Query</th>
      <th class="num" style="width: 25%;"><%= link_to "Searches", params.except(:sort) %></th>
      <th class="num" style="width: 25%;">Conversions</th>
      <th class="num" style="width: 25%;"><%= link_to "%", params.merge(sort: "conversion_rate") %></th>
    </tr>
  </thead>
  <tbody>
    <% @searches.each do |search| %>
      <tr>
        <td><%= search["query"] %></td>
        <td class="num"><%= search["searches_count"] %></td>
        <td class="num"><%= search["conversions_count"] %></td>
        <td class="num"><%= number_to_percentage search["conversion_rate"].to_f, precision: 0 %></td>
      </tr>
    <% end %>
  </tbody>
</table>
