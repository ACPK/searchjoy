<h1>Top 100 Searches</h1>

<table>
  <thead>
    <tr>
      <th>Query</th>
      <th><%= link_to "Searches", params.except(:sort) %></th>
      <th><%= link_to "Conversions", params.merge(sort: "conversion_rate") %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @searches.each do |search| %>
      <tr>
        <td><%= search["query"] %></td>
        <td><%= search["searches_count"] %></td>
        <td><%= search["conversions_count"] %></td>
        <td><%= number_to_percentage search["conversion_rate"].to_f, precision: 0 %></td>
      </tr>
    <% end %>
  </tbody>
</table>
